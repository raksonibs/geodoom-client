<div class="gutters">
  <h2>Settings</h2>

  <input value={{currentUser.email}} oninput={{action 'updateEmail' value="target.value"}}>

  <select onchange={{action 'updateCurrency' value="target.value"}}>
    {{#each-in currencies as |currencyKey currencyValue|}}
      <option value={{currencyKey}} selected={{eq currencyKey currentUser.currency}}>
        {{currencyValue.name}} ({{currencyValue.symbol}})
      </option>
    {{/each-in}}
  </select>

  <br />

  {{file-upload
    refreshModel=(route-action 'refresh')
  }}
  <p> 
    Current avatar: {{currentUser.avatar}} 
  </p>

  <img src={{currentUser.avatar}} alt="">
  
  <br />
  
  <button {{action 'save'}}>
    Save
  </button>
</div>