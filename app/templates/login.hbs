<h4> Login</h4>

<div class="form-container">
  <form {{action 'login' username password on="submit"}}>
    <h2>Login</h2>
    {{input value=username placeholder="Email"}}
    {{input value=password placeholder="password" type="password"}}
    <p> {{errorMessage}}</p>
    <button {{action 'login' username password}} disabled={{isLoggingIn}}>
      {{#if isLoggingIng}}
        Logging in...
      {{else}}
        Login
      {{/if}}
    </button>
  </form>
  {{#link-to 'signup'}}
    Signup
  {{/link-to}}

  {{#if sessionTorii.isWorking}}
    One sec while we get you signed in...
  {{else}}
    {{error}}
    <button onclick={{action 'loginOauth'}}>
      Sign In with Steam
    </button>
  {{/if}}
</div>