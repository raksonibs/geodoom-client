<div class="form-container">
  <form {{action "signup" email password on="submit"}}>
    <h2>Sign up</h2>
    {{input value=email id="email" placeholder="email"}}
    {{input value=password id="password" type="password" placeholder="password"}}
    
    {{#if signupError}}
      <p> {{signupError}} </p>
    {{/if}}

    <button id="signup" {{action "signup" email password disabled=isSigningUp}}>
      {{#if isSigningUp}}
        Signing up...
      {{else}}
      Sign up
      {{/if}}
    </button>
  </form>
  {{#link-to 'login'}}
    Login
  {{/link-to}}
</div>